<!doctype html>
<html lang="en-US">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>LNC Analytics</title>
        <link rel="stylesheet" id="main-css" href="/css/main.css" type="text/css" media="all">
    </head>
    <body>
        <nav id="nav-main">
            <h1 id="page-title"><a href="/">LNC Analytics</a></h1>
            <ul id="menu-main">
                <li><a href="/">Home</a></li>
                <li><a href="/user/profile/">Profile</a></li>
                <% if(user.role === 'admin'){ %>
                <li><a href="/user/users/">Users</a></li>
                <li><a href="/user/apis/">APIs</a></li>
                <% } %>
                <li><a href="/auth/logout/">Logout</a></li>
            </ul>
        </nav>
        <header>
            <h2>Welcome - <%= user.display_name %></h2>
        </header>
        <main>
            <section class="left">
                <form id="new_token">
                    <input type="text" name="title" placeholder="Title" value="" />
                    <input type="text" name="domains" placeholder="Domains (Separated with a ',')" value="" />
                    <input type="submit" value="Get Token" />
                </form>
            </section>
            <section class="profile-about-section">
                <table class="left">
                    <tr>
                        <th>Title</th>
                        <th>Domains</th>
                        <th>API Token</th>
                    </tr>
                    <% for(var i=0; i < apis.length; i++){ %>
                    <tr>
                        <td><%= apis[i].title %></td>
                        <td><%= apis[i].domains %></td>
                        <td><%= apis[i].api_token %></td>
                    </tr>
                    <% } %>
                </table>
            </section>
        </main>
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js?ver=3.3.1"></script>
        <script type="text/javascript" src="/js/main.js"></script>
    </body>
</html>